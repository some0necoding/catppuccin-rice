(defwidget bat []
  (box
    :class "battery"
    :space-evenly false
    (label
      :class "battery-icon"
      :text "${battery-icon} "
    )
    (label
      :text "${battery-percent}%"
    )
  )
)

(defpoll battery-icon :interval "1s" "scripts/battery icon")
(defpoll battery-percent :interval "1s" "scripts/battery percent")
