(defwidget brightness []
  (box
    :class "brightness"
    :tooltip "${brightness-percent}%"
    (circular-progress
      :value "${brightness-percent}"
      :start-at 50
      :clockwise false
      :thickness 3
      (label
        :class "brightness-icon"
        :text ""    ;or "󱠃"
      )
    )
  ) 
)

(deflisten brightness-percent :initial "100" "scripts/brightness percent")
